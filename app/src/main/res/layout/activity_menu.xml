<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".Activity_Menu"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/button_postulante_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_baseline_add_24"
        android:onClick="goToActivityPostulanteRegistro"
        android:text="Nuevo"
        android:background="@drawable/style_button"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/button_postulante_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="goToActivityPostulanteInfo"
        android:text="Info. Postulante"
        android:drawableRight="@drawable/ic_baseline_info_24"
        android:background="@drawable/style_button_2"/>
</LinearLayout>